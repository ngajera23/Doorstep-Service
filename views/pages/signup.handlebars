<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  {{> externals }}
</head>

<body>
  {{> header }}
  <div class="container">
    {{#if message }}
    <div class="alert alert-warning alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>Error!</strong>
      {{message}}
    </div>
    {{/if}}

    <form class="form-signin border mt-3 rounded" action="/signup" method="post">
      <h2 class="m-t text-center"> Create account</h2>
      <label class="mt-3">First Name</label>
      <input type="text" id="first_name" name="first_name" class="form-control mt-2" placeholder="First Name"
        required="">

      <label class="mt-3">Last Name</label>
      <input type="text" id="last_name" name="last_name" class="form-control mt-2" placeholder="Last Name" required="">


      <label class="mt-3">Email address</label>
      <input type="email" id="email" name="email" class="form-control mt-2" placeholder="Email address" required="">

      <label class="mt-3">Password</label>
      <input type="password" id="password" name="password" class="form-control mt-2" placeholder="Password" required="">

      {{!-- add role check box --}}
      <div class="mt-3">
        <label for="employer_role">Employer</label>
        <input name="role" id="employer_role" value="0" checked type="radio">
        <label for="worker_role">Worker</label>
        <input name="role" id="worker_role" value="1" type="radio">
      </div>

      <div class="d-flex">
        <button class="btn mx-auto text-center btn-primary mt-3" type="submit">Create account</button>
      </div>
      <p class="text-center mt-3"><a href="/login">Login here</a></p>
    </form>
  </div>
  {{> footer}}
</body>

</html>