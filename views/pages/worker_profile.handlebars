<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  {{> externals }}
</head>

<body>
  {{> header }}
  <div class="container">
    <h1 class="mt-3">
      Hello {{user.local.firstName}}
    </h1>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add review</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form method="post" action="/add_review">
            <div class="modal-body">
              <input type="hidden" value="{{worker._id}}" name="worker_id">
              <label for="review">Review</label>
              <textarea class="form-control mt-1" placeholder="Review" name="review"></textarea>
              <label for="rating" class="mt-2">Rating</label>
              <input type="number" min="0" max="5" class="form-control mt-1" name="rating" placeholder="Rating">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="col-md-12 mt-2">
        <div class="col-md-12 mt-2">
          <h2 class="text-center">Worker details</h2>
        </div>
        <div class="card col-md-6 offset-3">
          <div class="card-header text-center">
            <strong>{{worker.local.firstName}} {{worker.local.lastName}}</strong>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Email: {{worker.local.email}}</li>
            <li class="list-group-item">Phone: {{worker.local.phone}}</li>
            <li class="list-group-item">Address: {{worker.local.address}}</li>
            <li class="list-group-item">Average Rating: {{avg_rating}}/5</li>
          </ul>
          <button type="button" class="btn btn-primary m-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add review
          </button>
        </div>
        <h2 class="text-center mt-3">Reviews</h2>
        {{#each reviews}}
        <div class="card mt-3">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Review: {{this.review}}</li>
            <li class="list-group-item">Rating: {{this.rating}}/5</li>
          </ul>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{> footer}}
</body>


</html>