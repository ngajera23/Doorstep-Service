<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  {{> externals }}
</head>

<body>
  {{> header }}
  <div class="container">
    <h1 class="mt-3">
      Hello {{user.local.firstName}}
    </h1>
    <div class="container">
      <div class="col-md-12 row mt-2">
        <div class="col-md-12 mt-2">
          <h2 class="text-center">Job details</h2>
        </div>
        <div class="card col-md-6 offset-3">
          <div class="card-header text-center">
            <strong>{{job.title}}</strong>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Description: {{job.description}}</li>
            <li class="list-group-item">Location: {{ job.location }}</li>
            <li class="list-group-item">Salary: {{job.salary}}$ Per Month</li>
          </ul>
        </div>
        <h2 class="text-center mt-3">Workers</h2>
        {{#each workers}}
        <div class="card col-md-4 mt-3">
          <div class="card-header text-center">
            <strong>{{this.local.firstName}} {{ this.local.lastName }}</strong>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Email: {{this.local.email}}</li>
            <li class="list-group-item">Phone: {{this.local.phone}}</li>
            <li class="list-group-item">Address: {{this.local.address}}</li>
          </ul>
          {{!-- View details of worker --}}
          <a href="/worker_profile/{{this._id}}" class="btn m-2 btn-primary btn-block">View details</a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{> footer}}
</body>

</html>