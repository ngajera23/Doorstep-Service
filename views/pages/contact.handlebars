<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  {{> externals }}
</head>

<body>
  {{> header }}
  <div class="container">
    {{#if message }}
    <div class="alert alert-warning alert-dismissible
                    in" role="alert">
      {{message}}
    </div>
    {{/if}}

    <form class="form-signin border mt-3 rounded" action="/contact" method="post">
      <h2 class="m-t text-center"> Submit your query here </h2>
      <label class="mt-3">Email address</label>
      <input type="email" id="email" name="email" class="form-control mt-2" placeholder="Email address" required="">

      <label class="mt-3">Name</label>
      <input type="text" id="name" name="name" class="form-control mt-2" placeholder="Name" required="">

      <label class="mt-3">Query title</label>
      <input type="text" id="title" name="title" class="form-control mt-2" placeholder="Title" required="">

      <label class="mt-3">Description in detail</label>
      <input type="text" id="description" name="description" class="form-control mt-2" placeholder="Name" required="">

      <div class="d-flex">
        <button class="btn mx-auto text-center btn-primary mt-3" type="submit">Submit</button>
      </div>
    </form>
  </div>
  {{> footer}}
</body>

</html>